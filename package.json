{
  "name": "ts-backend-starter",
  "version": "1.0.0",
  "description": "Starter template for a backend application in Node.js+TypeScript",
  "license": "MIT",
  "author": "Thomas Moreira",
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/moreirathomas/ts-backend-starter.git"
  },
  "scripts": {
    "build": "tsc --build ./tsconfig.build.json",
    "prebuild": "rm -rf dist",
    "start": "node -r dotenv/config dist/index.js dotenv_config_path=.env.development",
    "format": "prettier --write src/**/*.ts",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "jest src",
    "test:unit-dev": "jest src --watchAll --coverage",
    "test:e2e": "jest test/e2e"
  },
  "dependencies": {
    "fastify": "4.11.0"
  },
  "devDependencies": {
    "@types/jest": "29.2.5",
    "@types/node": "18.11.18",
    "@typescript-eslint/eslint-plugin": "5.48.1",
    "@typescript-eslint/parser": "5.48.1",
    "dotenv": "16.0.3",
    "eslint": "8.31.0",
    "eslint-config-prettier": "8.6.0",
    "eslint-import-resolver-typescript": "3.5.3",
    "eslint-plugin-import": "2.27.4",
    "eslint-plugin-prettier": "4.2.1",
    "prettier": "2.8.2",
    "ts-jest": "29.0.4",
    "typescript": "4.9.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
